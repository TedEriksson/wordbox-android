<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boxesCard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:clickable="true"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardFrameLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/boxesCardImage"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/boxesCardTitle"
                android:padding="10dp"
                android:layout_gravity="start|center_horizontal|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/boxesCardHearts"
            android:layout_below="@id/cardFrameLayout"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:padding="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardFrameLayout"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/shareBox"
            android:clickable="true"
            android:id="@+id/heartBox"
            android:background="@android:drawable/ic_menu_help"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardFrameLayout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:id="@+id/shareBox"
            android:background="@android:drawable/ic_menu_help"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>